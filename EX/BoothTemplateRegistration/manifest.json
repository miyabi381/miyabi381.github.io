{
  "manifest_version": 3,
  "name": "Booth Template Registration",
  "version": "1.0",
  "description": "Boothでの商品登録をもっと楽に！テンプレートで入力作業を時短します。",
  "permissions": [
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://manage.booth.pm/items/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "media/icon16.png",
    "32": "media/icon32.png",
    "48": "media/icon48.png",
    "128": "media/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Booth Template Registration",
    "default_icon": {
      "16": "media/icon16.png",
      "32": "media/icon32.png"
    }
  }
}